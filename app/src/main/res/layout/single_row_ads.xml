<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="@dimen/padding_10">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/user" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:text="@string/demo_bike_name"
            android:textSize="@dimen/label_text_size_15"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:text="By James Thomson"
            android:textSize="@dimen/label_text_size_13"
            android:textColor="@color/gray"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:text="3 km away"
            android:textStyle="bold"
            android:textSize="@dimen/label_text_size_13"
            android:textColor="@color/app_color_green"
            android:layout_height="wrap_content"/>


    </LinearLayout>
</LinearLayout>