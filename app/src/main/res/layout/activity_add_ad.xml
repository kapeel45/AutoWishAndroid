<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    android:orientation="vertical"
    tools:context=".AddAdActivity">

    //header

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_color_purple"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/image_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="@dimen/padding_5"
            android:src="@drawable/back_white" />


        <TextView
            android:id="@+id/heading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:padding="@dimen/padding_10"
            android:singleLine="true"
            android:text="@string/add_ads"
            android:textColor="@color/white"
            android:textSize="@dimen/label_text_size_17" />


    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_10">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:padding="@dimen/padding_10"
                android:text="@string/vehicle_type"
                android:textColor="@color/black"
                android:textSize="@dimen/label_text_size_15" />

            //btns

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_5"
                    android:layout_weight="1"
                    android:background="@drawable/bg_round_corner">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="@dimen/padding_10"
                        android:text="Bike"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/label_text_size_15" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_5"
                    android:layout_weight="1"
                    android:background="@drawable/bg_round_corner">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="@dimen/padding_10"
                        android:text="car"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/label_text_size_15" />

                </LinearLayout>
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:padding="@dimen/padding_10"
                android:text="@string/carNumber"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/label_text_size_13" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edit_vnumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_10"
                android:textColor="@color/black"
                android:textSize="@dimen/label_text_size_15"
                app:backgroundTint="@color/app_color_purple" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:padding="@dimen/padding_10"
                android:text="@string/model_name"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/label_text_size_13" />

            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_10"
                android:textColor="@color/black"
                android:textSize="@dimen/label_text_size_15"
                app:backgroundTint="@color/app_color_purple" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:padding="@dimen/padding_10"
                android:text="@string/compnay_name"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/label_text_size_13" />

            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_10"
                android:textColor="@color/black"
                android:textSize="@dimen/label_text_size_15"
                app:backgroundTint="@color/app_color_purple" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:padding="@dimen/padding_10"
                android:text="@string/makeYear"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/label_text_size_13" />

            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_10"
                android:textColor="@color/black"
                android:textSize="@dimen/label_text_size_15"
                app:backgroundTint="@color/app_color_purple" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:padding="@dimen/padding_10"
                android:text="@string/fuelType"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/label_text_size_13" />

            <RadioGroup
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Petrol"
                    android:buttonTint="@color/app_color_purple"
                    android:textSize="@dimen/label_text_size_13"
                    android:textColor="@color/black"
                    android:layout_weight="1"/>

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Disel"
                    android:buttonTint="@color/app_color_purple"
                    android:textSize="@dimen/label_text_size_13"
                    android:textColor="@color/black"
                    android:layout_weight="1"/>

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Electric"
                    android:buttonTint="@color/app_color_purple"
                    android:textSize="@dimen/label_text_size_13"
                    android:textColor="@color/black"
                    android:layout_weight="1"/>
            </RadioGroup>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:layout_marginLeft="@dimen/margin_5"
              android:layout_marginRight="@dimen/margin_5"
              android:background="@color/app_color_purple"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:padding="@dimen/padding_10"
                android:text="@string/color"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/label_text_size_13"/>


            <Spinner
                android:id="@+id/spinner_color"
                android:layout_width="match_parent"
                android:popupBackground="@color/white"
                android:padding="@dimen/padding_10"
                android:layout_height="wrap_content"
                 />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_marginRight="@dimen/margin_5"
                android:background="@color/app_color_purple"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:padding="@dimen/padding_10"
                android:text="@string/transmission"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/label_text_size_13" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_5"
                    android:layout_weight="1"
                    android:background="@drawable/bg_round_corner">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="@dimen/padding_10"
                        android:text="Auto"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/label_text_size_13" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_5"
                    android:layout_weight="1"
                    android:background="@drawable/bg_round_corner">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="@dimen/padding_10"
                        android:text="Manual"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/label_text_size_13" />

                </LinearLayout>
            </LinearLayout>



            <TextView
                android:layout_width="match_parent"
                android:textColor="@color/white"
                android:text="@string/next"
                android:textSize="@dimen/label_text_size_15"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/margin_10"
                android:background="@color/app_color_purple"
                android:padding="@dimen/padding_10"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>


</LinearLayout>